# ============================================
# ChaosChain Integrations - Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values:
# cp env.template .env
# ============================================

# ============================================
# Network Configuration
# ============================================

# Primary network (base-sepolia, ethereum-sepolia, optimism-sepolia, zerog-testnet, mode-testnet)
NETWORK=zerog-testnet

# RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
ETHEREUM_SEPOLIA_RPC_URL=https://ethereum-sepolia.blockpi.network/v1/rpc/public
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia-optimism.etherscan.io
ZEROG_TESTNET_RPC_URL=https://evmrpc-testnet.0g.ai

# ============================================
# Agent Identity (ERC-8004)
# ============================================

# Leave blank to auto-generate wallets, or set specific keys
# ALICE_PRIVATE_KEY=0x...
# BOB_PRIVATE_KEY=0x...
# CHARLIE_PRIVATE_KEY=0x...

# ============================================
# x402 Payment Configuration (Coinbase Protocol)
# ============================================

# Enable facilitator for decentralized payment verification
X402_USE_FACILITATOR=true

# Facilitator endpoint
# - Local development: http://localhost:8402
# - Managed production: https://pay.chaoscha.in
# - Self-hosted: https://your-facilitator.example.com
X402_FACILITATOR_URL=http://localhost:8402

# ChaosChain protocol fee (default: 2.5%)
CHAOSCHAIN_FEE_PERCENTAGE=2.5

# Custom treasury address (optional, uses official ChaosChain treasury if not set)
# CHAOSCHAIN_TREASURY_ADDRESS=0xYourCustomTreasury

# Operator private key for x402 (optional, uses first agent wallet if not set)
# CHAOSCHAIN_OPERATOR_PRIVATE_KEY=0x...

# ============================================
# Google AP2 Intent Verification
# ============================================

# AP2 configuration (usually auto-detected)
# AP2_MERCHANT_WALLET_ADDRESS=0x...

# ============================================
# Compute Providers
# ============================================

# Which compute provider to use (local, eigencompute, 0g)
COMPUTE_PROVIDER=eigencompute

# EigenCompute Configuration
EIGENCOMPUTE_APP_ID=0xYourAppId
EIGENCOMPUTE_GRPC_URL=localhost:50051

# 0G Compute Configuration (if using 0g)
# ZG_COMPUTE_GRPC_URL=localhost:50052

# ============================================
# Storage Providers
# ============================================

# Which storage provider to use (local, ipfs, pinata, irys, 0g)
STORAGE_PROVIDER=0g

# Local IPFS (just run: ipfs daemon)
# IPFS_HOST=localhost
# IPFS_PORT=5001

# Pinata (cloud IPFS)
# PINATA_JWT=your_jwt_token
# PINATA_GATEWAY=https://gateway.pinata.cloud

# Irys (Arweave permanent storage)
# IRYS_WALLET_KEY=your_wallet_key

# 0G Storage Configuration
ZG_STORAGE_GRPC_URL=localhost:50051
ZEROG_TESTNET_PRIVATE_KEY=your_0g_private_key

# ============================================
# EigenCompute Deployment (for deploying TEE apps)
# ============================================

# Docker registry credentials (for pushing TEE app images)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# ============================================
# Traditional Payment APIs (Optional)
# ============================================

# Stripe
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...

# Google Pay
# GOOGLE_PAY_MERCHANT_ID=merchant.example.com

# Apple Pay
# APPLE_PAY_MERCHANT_ID=merchant.example.com

# PayPal
# PAYPAL_CLIENT_ID=your_client_id
# PAYPAL_CLIENT_SECRET=your_client_secret

# ============================================
# Database & Monitoring (Optional)
# ============================================

# Supabase (for transaction tracking)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your_service_key

# ============================================
# Development Settings
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode
# DEBUG=true

# ============================================
# ChaosChain Protocol Contracts (Pre-deployed)
# ============================================

# ERC-8004 v1.0 Registries (same addresses on all networks)
# No need to set these - they're pre-deployed
# IDENTITY_REGISTRY=0x7177a6867296406881E20d6647232314736Dd09A
# REPUTATION_REGISTRY=0xB5048e3ef1DA4E04deB6f7d0423D06F63869e322
# VALIDATION_REGISTRY=0x662b40A526cb4017d947e71eAF6753BF3eeE66d8

# ============================================
# Quick Start Commands
# ============================================

